extends layouts/page

block content
  section.body-font.pt-20.pb-10.max-w-3xl.mx-auto.break-words(class='sm:px-5')
    div.mb-8(class='-mt-6')
      a.flex.items-center.gap-2.back-btn(href='/catalog')
        span.text-custom-gray.text-sm < 
        span.text.text-custom-gray Catalog
    
    h1.pb-2 #{title}

    div.flex.my-6.gap-4
      div(class="w-1/3")
        img.w-full.object-cover.object-center.rounded-lg(src=`${image}`, alt=`${title}`, class='lg:h-64 md:h-36')
      div.p-9.bg-gray-100.rounded-lg(class="w-2/3")
        div.flex.gap-4.pb-8
          div.flex.items-center(class="w-1/4")
            label.font-bold MIDI Input
          div(class="w-3/4")
            div.inline-block.relative.w-full
              select.w-full.block.appearance-none.bg-white.border.border-gray-200.px-4.py-2.pr-8.rounded-lg.leading-tight(class='hover:border-gray-300 focus:outline-none')
                option Cirklon2 Port1
                option Cirklon2 Port2
                option Cirklon2 Port3
              div.pointer-events-none.absolute.inset-y-0.right-0.flex.items-center.px-4.text-gray-700
                svg(class="fill-current h-3 w-3" width="14" height="9" viewBox="0 0 14 9" fill="none" xmlns="http://www.w3.org/2000/svg")
                  path(d="M0.479434 1.66436C-0.093811 1.01946 0.363995 0 1.22684 0H12.7732C13.636 0 14.0938 1.01946 13.5206 1.66436L7.74741 8.15916C7.34962 8.60668 6.65038 8.60668 6.25259 8.15916L0.479434 1.66436Z" fill="#333333" fill-opacity="0.9")
        div.flex.gap-4.pb-8
          div.flex.items-center(class="w-1/4")
            label.font-bold Output
          div(class="w-3/4")
            div.inline-block.relative.w-full
              select.w-full.block.appearance-none.bg-white.border.border-gray-200.px-4.py-2.pr-8.rounded-lg.leading-tight(class='hover:border-gray-300 focus:outline-none')
                option Studio Display Speakers
                option Headphones
              div.pointer-events-none.absolute.inset-y-0.right-0.flex.items-center.px-4.text-gray-700
                svg(class="fill-current h-3 w-3" width="14" height="9" viewBox="0 0 14 9" fill="none" xmlns="http://www.w3.org/2000/svg")
                  path(d="M0.479434 1.66436C-0.093811 1.01946 0.363995 0 1.22684 0H12.7732C13.636 0 14.0938 1.01946 13.5206 1.66436L7.74741 8.15916C7.34962 8.60668 6.65038 8.60668 6.25259 8.15916L0.479434 1.66436Z" fill="#333333" fill-opacity="0.9")
        div.absolute
          div.inline-block.relative
            div.inline-block.relative
              button(class="hover:shadow-md share-button" id="share").flex-shrink-0.border-transparent.bg-deep-teal.text-white.py-2.px-4.rounded-lg Share your preset
              div(class="pb-0.5 pt-1 px-1.5").text-xs.absolute.-right-6.-top-2.flex-shrink-0.border-transparent.bg-orange.text-white.rounded New
            
            div.share-dialog.mr-4(class="hidden")
              div(style="left: 50%").triangle.shadow-lg.mt-2.z-20
              div(style="left: -50%").share-btn.p-8.w-80.bg-white.flex.flex-wrap.gap-6.absolute.top-14.z-10.share-btn.rounded-lg
                  div(class="w-[4.25rem]").flex.flex-col.items-center
                    a(data-id="copy")
                      img(src="/images/copy.svg" alt="Copy").pb-2
                    a(data-id="copy") Copy link
                  div(class="w-[4.25rem]").flex.flex-col.items-center
                    a(data-id="wa") 
                      img(src="/images/whatsapp.svg", alt="WhatsApp").pb-2
                    a(data-id="wa") WhatsApp
                  div(class="w-[4.25rem]").flex.flex-col.items-center
                    a(data-id="tg") 
                      img(src="/images/facebook.svg", alt="Facebook").pb-2
                    a(data-id="fb") Facebook
                  div(class="w-[4.25rem]").flex.flex-col.items-center
                    a(data-id="tw") 
                      img(src="/images/twitter.svg", alt="Twitter").pb-2
                    a(data-id="tw") X
                  div(class="w-[4.25rem]").flex.flex-col.items-center
                    a(data-id="mail") 
                      img(src="/images/email.svg", alt="Mail").pb-2
                    a(data-id="mail") Email
      


    div.flex.flex-col.gap-6.p-4.bg-deep-teal.rounded-lg
      img.rounded-lg.w-full(src="/images/board1.jpg", alt="Panel")
      img.rounded-lg.w-full(src="/images/board2.jpg", alt="Keyboard")